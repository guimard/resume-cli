{
  "env": {
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "plugins": ["jest"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig-test.json",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error"
  }
}
